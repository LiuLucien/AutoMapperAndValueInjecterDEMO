@model IEnumerable<AutoMapperDEMO.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attribute)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LimitCount)
        </th>
        <th>
            上架時段
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActiveEnable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attribute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LimitCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveSDate)~
                @Html.DisplayFor(modelItem => item.ActiveEDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveEnable)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @using (Html.BeginForm("Delete", "Product", new { id = item.Id }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <button class="btn btn-primary" onclick="return confirm('確定刪除?');">Delete</button>
                }
            </td>
        </tr>
    }

</table>
